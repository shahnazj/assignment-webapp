@model EditProjectViewModel


<section id="edit-project-modal" class="modal">
    <div class="card">
        <div class="card-header">
            <h3>Edit Project</h3>
            <button class="btn-close" data-type="close" data-target="#edit-project-modal"></button>
        </div>
        <div class="card-body">
            <form asp-controller="Projects" asp-action="Edit" method="post" enctype="multipart/form-data"
                id="edit-project-form">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <div class="image-preview-container project-image" data-file-upload>
                        <img class="hide" />
                        <div class="circle circle-gray">
                            <i class="fa-duotone fa-solid fa-camera"> </i>
                        </div>
                        <input asp-for="ProjectImage" type="file" accept="image/*" hidden />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Project Name</label>
                    <input asp-for="ProjectName" class="form-input" type="text" />
                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Client Name</label>
                    <div class="form-select" data-placeholder="Choose a client">
                        <button type="button" class="form-select-trigger">
                            <span class="form-select-text"></span>
                        </button>
                        <ul class="form-select-options">
                            @foreach (var option in Model.Clients)
                            {
                                <li class="form-select-option" data-value="@option.Value">@option.Text</li>
                            }
                        </ul>
                        <input asp-for="ClientId" type="hidden" class="client-select-value" />
                    </div>
                    <span asp-validation-for="ClientId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Description</label>
                    <div class="wysiwyg">
                        <textarea asp-for="Description" id="edit-project-description"
                            data-quill-textarea="#edit-project-description-wysiwyg-editor"></textarea>
                        <div id="edit-project-description-wysiwyg-editor" data-quill-editor
                            data-quill-toolbar="#edit-project-description-wysiwyg-toolbar" class="wysiwyg-editor"></div>
                        <div id="edit-project-description-wysiwyg-toolbar" class="wysiwyg-toolbar">
                            <span class="ql-formats">
                                <button class="ql-bold"></button>
                                <button class="ql-italic"></button>
                                <button class="ql-underline"></button>
                            </span>

                            <span class="ql-formats">
                                <button class="ql-align" value=""></button>
                                <button class="ql-align" value="center"></button>
                                <button class="ql-align" value="right"></button>
                            </span>

                            <span class="ql-formats">
                                <button class="ql-list" value="bullet"></button>
                                <button class="ql-list" value="ordered"></button>
                            </span>

                            <span class="ql-formats">
                                <button class="ql-link"></button>
                            </span>
                        </div>
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-horizontal-group">
                    <div class="form-group">
                        <label class="form-label">Start Date</label>
                        <input asp-for="StartDate" class="form-input" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">End Date</label>
                        <input asp-for="EndDate" class="form-input" type="date" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Member</label>
                    <div class="form-select" data-placeholder="Choose a member">
                        <button type="button" class="form-select-trigger">
                            <span class="form-select-text"></span>
                        </button>
                        <ul class="form-select-options">
                            @foreach (var option in Model.Members)
                            {
                                <li class="form-select-option" data-value="@option.Value">@option.Text</li>
                            }
                        </ul>
                        <input asp-for="MemberId" type="hidden" class="member-select-value" />
                    </div>
                    <span asp-validation-for="MemberId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Budget</label>
                    <div class="form-input-extended">
                        <i class="fa-duotone fa-solid fa-dollar-sign"></i>
                        <input asp-for="Budget" class="form-input" type="number" step="0.01" />
                    </div>
                    <span asp-validation-for="Budget" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Project Status</label>
                    <div class="form-select" data-placeholder="Choose a Status">
                        <button type="button" class="form-select-trigger">
                            <span class="form-select-text"></span>
                        </button>
                        <ul class="form-select-options">
                            @foreach (var option in Model.Statuses)
                            {
                                <li class="form-select-option" data-value="@option.Value">@option.Text</li>
                            }
                        </ul>
                        <input asp-for="StatusId" type="hidden" class="status-select-value" />
                    </div>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn">Save</button>
            </form>
        </div>
    </div>
</section>