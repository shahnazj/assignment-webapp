@model AddMemberViewModel

<section id="add-member-modal" class="modal">
    <div class="card">
        <div class="card-header">
            <h3>Add Member</h3>
            <button class="btn-close" data-type="close" data-target="#add-member-modal"></button>
        </div>
        <div class="card-body">
            <form asp-controller="Members" asp-action="Add" method="post" enctype="multipart/form-data" novalidate>
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="image-preview-container member-image" data-file-upload>
                        <img class="hide" />
                        <div class="circle circle-gray">
                            <i class="fa-duotone fa-solid fa-camera"></i>
                        </div>
                        <input asp-for="MemberImage" type="file" accept="image/*" hidden />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">First Name</label>
                    <input asp-for="MemberFirstName" class="form-input" type="text" required />
                    <span asp-validation-for="MemberFirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Last Name</label>
                    <input asp-for="MemberLastName" class="form-input" type="text" required />
                    <span asp-validation-for="MemberLastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input asp-for="MemberEmail" class="form-input" type="email" required />
                    <span asp-validation-for="MemberEmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Phone</label>
                    <input asp-for="MemberPhone" class="form-input" type="tel" />
                    <span asp-validation-for="MemberPhone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Job Title</label>
                    <input asp-for="MemberJobTitle" class="form-input" type="text" />
                    <span asp-validation-for="MemberJobTitle" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Address</label>
                    <input asp-for="MemberAddress" class="form-input" type="text" />
                    <span asp-validation-for="MemberAddress" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Birth Date</label>
                    <input asp-for="MemberBirthDate" type="date" class="form-input" />
                    <span asp-validation-for="MemberBirthDate" class="text-danger"></span>
                </div>

                <button type="submit" class="btn">Create</button>
            </form>
        </div>
    </div>
</section>
